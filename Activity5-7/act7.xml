<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/animebg"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <!-- CardView wrapping the content -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp"
            android:backgroundTint="@android:color/white">

            <!-- Inner LinearLayout for padding and content arrangement -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:background="@drawable/lavender_border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bluetooth Long-Distance Communication"
                    android:textSize="24sp"
                    android:textColor="@android:color/black"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bluetooth can be used for long-distance communication in a number of ways, including:\n\n- Bluetooth Low Energy (LE) Long Range mode: This mode uses a 'Coded PHY' to extend the range to hundreds of meters, with reduced data rates.\n\n- Bluetooth LE Coded function: This increases the range of a smartphone to about 200 meters, with a maximum confirmed range of 320 meters.\n\n- Class 1 Bluetooth radios: With a power rating of 100mW, they achieve a range up to 100 meters.\n\nFactors affecting Bluetooth range:\n- Radio spectrum\n- PHY\n- Transmit power\n- Receiver sensitivity\n- Environmental factors\n- Water absorption\n- Battery life"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Watch this video on YouTube"
                    android:textSize="16sp"
                    android:textColor="@android:color/holo_red_dark"
                    android:padding="16dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    android:id="@+id/bluetooth_range_button"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
