<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/animebg"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <!-- CardView wrapping the content -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp"
            android:backgroundTint="@android:color/white">

            <!-- Inner LinearLayout for padding and content arrangement -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:background="@drawable/lavender_border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Infrared Communication"
                    android:textSize="24sp"
                    android:textColor="@android:color/black"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Infrared (IR) communication is a wireless technology that uses infrared waves to transfer digital data. IR is a type of electromagnetic radiation that has a longer wavelength than visible light, making it invisible to the human eye.\n\nIR communication is often used in remote controls for televisions, DVD players, and other entertainment devices. When a button is pressed on the remote, an IR LED turns on and off rapidly to send information to a photo sensor on the device.\n\nIR communication is one of the simplest and most cost-effective ways to transmit data wirelessly. However, anyone can send IR signals, and there's usually no authentication or authorization between the sender and receiver."
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Watch this video on YouTube"
                    android:textSize="16sp"
                    android:textColor="@android:color/holo_red_dark"
                    android:padding="16dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    android:id="@+id/youtube_button"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
